<footer>
  
  <div class="footer__links">
    {% for link in section.settings.menu.links %}
      {{ link.title | link_to: link.url }}
    {% endfor %}
    </div>
    
    <div class="footer__payment">
      {% if section.settings.show_payment_icons %}
        {% for type in shop.enabled_payment_types %}
          {{ type | payment_type_svg_tag }}
        {% endfor %}
      {% endif %}
      </div>
<div class="footer__copyright-wrapper">

  <div class="footer__copyright">
    <span>We believe in beauty thatâ€™s bold, effortless, and kind to your nails.</span>
  </div>

  <div class="footer__copyright">
    <div class="menus-term">
      <a href="">Privacy Policy</a>
      <a href="">Terms of Use</a>
    </div>
  </div>

  <div class="footer__copyright All-rights-reserved ">
    <div>
      &copy;
      {{ 'now' | date: '%Y' }}
      {{ shop.name | link_to: routes.root_url }}<br>
      All rights reserved
    </div>
  </div>
</div>

</footer>



{% schema %}
{
  "name": "t:general.footer",
  "class": "section section-footer",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "t:labels.show_payment_icons",
      "default": true
    }
  ]
}
{% endschema %}
